<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.iban.MainActivity" >

    <Button
        android:id="@+id/Alarm"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/AlarmNumber"
        android:layout_alignLeft="@+id/ListSnedSms"
        android:layout_alignParentTop="true"
        android:text="ALARM"
        android:background="#FF0000"
        android:textSize="80dp"
        android:onClick="Alarm" />

    <Button
        android:id="@+id/ListSendSms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:onClick="ListSendSms"
        android:text="List send sms" />

    <Button
        android:id="@+id/AlarmNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/Alarm"
        android:onClick="AlarmNumber"
        android:text="alarm number" />

</RelativeLayout>