<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.appinstalled.MainActivity" >
    
   	<ListView
   	    android:id="@+id/listView"
   	    android:layout_width="match_parent"
   	    android:layout_height="match_parent"
   	    android:layout_below="@+id/checkBox1"
   	    android:descendantFocusability="blocksDescendants" />

   	<CheckBox
   	    android:id="@+id/checkBox1"
   	    android:layout_width="wrap_content"
   	    android:layout_height="wrap_content"
   	    android:layout_alignParentLeft="true"
   	    android:layout_alignParentTop="true"
   	    android:text="SortNameRos" 
   	    android:onClick="SortNameRos"/>

   	<CheckBox
   	    android:id="@+id/checkBox4"
   	    android:layout_width="wrap_content"
   	    android:layout_height="wrap_content"
   	    android:layout_above="@+id/listView"
   	    android:layout_alignRight="@+id/listView"
   	    android:layout_marginRight="23dp"
   	    android:text="SortStareMal"
   	    android:onClick="SortStareMal" />

   	<CheckBox
   	    android:id="@+id/checkBox3"
   	    android:layout_width="wrap_content"
   	    android:layout_height="wrap_content"
   	    android:layout_above="@+id/listView"
   	    android:layout_toLeftOf="@+id/checkBox4"
   	    android:text="SortStareRos"
   	    android:onClick="SortStareRos" />

   	<CheckBox
   	    android:id="@+id/checkBox2"
   	    android:layout_width="wrap_content"
   	    android:layout_height="wrap_content"
   	    android:layout_above="@+id/listView"
   	    android:layout_marginLeft="15dp"
   	    android:layout_toRightOf="@+id/checkBox1"
   	    android:text="SortNameMal"
   	    android:onClick="SortNameMal" />

</RelativeLayout>
