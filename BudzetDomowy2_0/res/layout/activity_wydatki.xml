<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.budzetdomowy2_0.Wydatki" >

    <Button
        android:id="@+id/WydatkiCykliczneButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button3"
        android:layout_alignLeft="@+id/button3"
        android:layout_marginBottom="23dp"
        android:onClick="WydatkiCykliczneButton"
        android:text="Wydatki cykliczne\nsuma: " />

    <Button
        android:id="@+id/WydatkiPlanowaneButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button3"
        android:layout_below="@+id/WydatkiCykliczneButton"
        android:onClick="WydatkiPlanowaneButton"
        android:text="Wydatki planowane\nsuma: " />

    <Button
        android:id="@+id/WydatkiNiePlanowane"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="147dp"
        android:text="Wydatki nie planowane\nsuma: " 
        android:onClick="WydatkiNiePlanowane"/>

</RelativeLayout>
