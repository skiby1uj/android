<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/flaga"
    tools:context="com.example.englishquiz20.Summary" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Question01\ndog"
        android:textAppearance="?android:attr/textAppearanceMedium"
        style="@style/widoczny" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignRight="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:layout_marginRight="20dp"
        android:scaleType="fitCenter"
        android:src="@drawable/dog" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView1"
        android:layout_alignParentRight="true"
        android:layout_marginRight="28dp"
        android:text="YES/NO"
        android:textAppearance="?android:attr/textAppearanceMedium"
        style="@style/widoczny" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/imageView1"
        android:text="Question02\ncat"
        android:textAppearance="?android:attr/textAppearanceMedium"
        style="@style/widoczny" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/imageView1"
        android:layout_below="@+id/textView3"
        android:scaleType="fitCenter"
        android:src="@drawable/cat" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageView2"
        android:layout_alignLeft="@+id/textView2"
        android:text="YES/NO"
        android:textAppearance="?android:attr/textAppearanceMedium"
        style="@style/widoczny" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView3"
        android:layout_below="@+id/imageView2"
        android:text="Question03\nhouse"
        android:textAppearance="?android:attr/textAppearanceMedium"
        style="@style/widoczny" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/imageView2"
        android:layout_below="@+id/textView5"
        android:scaleType="fitCenter"
        android:src="@drawable/house" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageView3"
        android:layout_alignLeft="@+id/textView4"
        android:text="YES/NO"
        android:textAppearance="?android:attr/textAppearanceMedium"
        style="@style/widoczny" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView5"
        android:layout_below="@+id/imageView3"
        android:text="Question04\nHouse"
        android:textAppearance="?android:attr/textAppearanceMedium"
        style="@style/widoczny" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/imageView3"
        android:layout_below="@+id/textView7"
        android:scaleType="fitCenter"
        android:src="@drawable/drhouse" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageView4"
        android:layout_alignLeft="@+id/textView6"
        android:text="YES/NO"
        android:textAppearance="?android:attr/textAppearanceMedium" 
        style="@style/widoczny"/>

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:onClick="Reset"
        android:text="Reset" />

</RelativeLayout>
